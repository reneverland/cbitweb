@font-face 
{
	font-family: 'OpenSansLight';
	src: url('../fonts/OpenSans-Light.eot');
	src: url('../fonts/OpenSans-Light.eot?#iefix') format('embedded-opentype'),
		 url('../fonts/OpenSans-Light.woff') format('woff'),
		 url('../fonts/OpenSans-Light.ttf') format('truetype'),
		 url('../fonts/OpenSans-Light.svg#OpenSansLight') format('svg');
	font-weight: normal;
	font-style: normal;
}

* 
{
	font-family: OpenSansLight, "Microsoft YaHei", "Open Sans", sans-serif, serif;
}

body, button, input, select, textarea, h1, h2, h3, h4, h5, h6, p, div, span, a, li
{ 
	font-family: OpenSansLight, "Microsoft YaHei", "Open Sans", sans-serif, serif;
	-webkit-font-smoothing: antialiased;
}

html,
body
{
	padding: 0;
	margin: 0;
	width: 100%;
	height: 100%;
	background: #fff;
	color: #000;
}

/* header format begin */
.header-container
{
	margin: 0;
	padding: 0;
}

.navbar
{
	padding: 0;
	margin: 0;
	background: #eee;
	border-radius: 0;
	
	/* set transparent attribute*/
	filter: alpha(Opacity=90);
	-moz-opacity:0.9;
	opacity: 0.9;
}

/* navbar-header */
.navbar .navbar-header
{
	min-height: 90px;
}

.navbar .navbar-header button
{
	padding: 4px;
	color: #337ab7;
}

.navbar .navbar-header button .icon-bar
{
	margin: 3px auto;
    width: 25px;
    background-color: #337ab7;
}

.navbar .navbar-header button .menu-tip
{
	display: block;
    width: 32px;
    height: 10px;
    font-size: 8px;
    font-weight: 600;
}

.navbar .navbar-header .navbar-brand
{
	float: left;
	padding: 0;
	margin: 0;
	height: 90px;
	line-height: 90px;
	overflow: hidden;
}

.navbar .navbar-header .navbar-brand .switch-lang,
.navbar .navbar-header .navbar-brand .brand-link
{
	display: inline-block;
}

.navbar .navbar-header .navbar-brand .switch-lang .lang-img
{
	cursor: pointer;
}

.navbar .navbar-header .navbar-brand .switch-lang .title
{
	display: inline-block;
	font-size: 20px;
	cursor: pointer;
}

.navbar .navbar-header .navbar-brand .brand-link > a
{
	position: absolute;
	display: block;
	margin: 0;
	margin-left: 22px;
	margin-top: -50px;
	padding: 0;
	font-size: 35px;
	text-decoration: none;
}

.navbar .menu-panel
{
	float: right;
}

.nav .menu-item
{
	padding: 0;
	margin: 0;
	text-align: center;
}

.nav .menu-item > a
{
	display: block;
	padding: 0;
	margin: 0;
	height: 45px;
	line-height: 45px;
	border-bottom: 3px;

	text-decoration: none;
	font-weight: 800;
	font-size: 18px;
}

.nav .menu-item > a .hot-icon
{
	color: red;
	font-size: 11px;
}

.nav .menu-item.active > a
{
	border-bottom: 3px solid #23a8f5;
}

.nav .menu-item > a:hover
{
	border-bottom: 3px solid #23a8f5;
}
/* header format end */

/* footer format begin */
.footer
{
	margin: 0 auto;
	height: 60px;
	text-align: center;
	color: black;
	background: #eee;
	
	/* set transparent attribute*/
	filter: alpha(Opacity=90);
	-moz-opacity:0.9;
	opacity: 0.9;
}

.footer .row
{
	margin-top: 20px;
}
/* footer format end */

/* responsive css */
/* 大屏幕（大桌面显示器，大于等于 1200px） */
/* 默认样式为大屏幕 */

/* 中等屏幕（桌面显示器，大于等于 992px，小于1200px） */
@media (max-width: 1200px) { 

	/* navbar-header */
	.navbar .navbar-header
	{
		min-height: 60px;
	}

	.navbar .navbar-header .navbar-brand
	{
		height: 60px;
		line-height: 60px;
	}

	.nav .menu-item > a
	{
		height: 30px;
		line-height: 30px;
		font-size: 15px;
	}

	.navbar .navbar-header .navbar-brand .brand-link > a
	{
		position: absolute;
		display: block;
		margin-left: 22px;
		margin-top: -35px;
		font-size: 35px;
	}
}

/* 小屏幕（平板，大于等于 768px，小于等于992px） */
@media (max-width: 992px) {
	.navbar > .container
	{
		width: 100%;
	}

	/* navbar-header */
	.navbar .navbar-header
	{
		min-height: 40px;
	}

	.navbar .navbar-header .navbar-brand
	{
		margin-left: 10px;
		margin-top: 5px;
		height: 40px;
		line-height: 40px;
	}

	.navbar .navbar-header .navbar-brand .switch-lang .title
	{
		font-size: 16px;
	}

	.navbar .navbar-header .navbar-brand .brand-link > a
	{
		position: absolute;
		display: block;
		margin: 0;
		margin-left: 12px;
		margin-top: -24px;
		padding: 0;
		font-size: 25px;
		text-decoration: none;
	}
}

/* 	超小屏幕（手机，小于 768px） */
@media (max-width: 768px) {

	/* navbar-header */
	.navbar .navbar-header
	{
		min-height: 40px;
	}

	.navbar .navbar-header .navbar-brand .switch-lang .title
	{
		display: none;
	}
}

/* main content container */
.main-container 
{
	margin: 0;
	padding: 0;
}

.full-title
{

	font-size: 400px;
}